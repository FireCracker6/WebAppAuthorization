@model UserSignInViewModel
@{
	ViewData["Title"] = "Sign in to your account";
}

<div class="d-flex justify-content-between">
	<h1 class="display-4">Sign in to  <br /> your account</h1>
	<form method="post" class="col-10 col-xl-6" novalidate>

		<div asp-validation-summary="ModelOnly" class="text-danger"></div>



		<div class="mb-3">
			<label asp-for="Email" class="form-label">Email Address</label>
			<input asp-for="Email" class="form-control" autocomplete="off" />
			<small class="text-danger">
				<span asp-validation-for="Email"></span>
			</small>
		</div>

		<div class="mb-3">
			<label asp-for="Password" class="form-label">Choose a Password</label>
			<input asp-for="Password" class="form-control" autocomplete="off" />
			<small class="text-danger">
				<span asp-validation-for="Password"></span>
			</small>
		</div>

		

		<div cite="mt-5">
			<div class="d-grid">
				<button class="btn btn-success" type="submit">SIGN IN</button>
			</div>
		</div>
	</form>
</div>